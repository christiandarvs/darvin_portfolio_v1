---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Christian Darvin</title>
    <link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
    />
    <link rel="stylesheet" href="style.css" />
  <link rel="shortcut icon" href="favicon.svg" />
  <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
          

  </head>
  <body>
    <!-- Hero -->
    <div class="home" id="home">
      <h1>
        <span class="full-line">
          user@ubuntu:~$ <span class="linux-command">whoami</span>
        </span>
      </h1>
      <h1 class="output">christiandarvin</h1>
      <div class="button-row">
        <a href="#about-section"><button class="learn-more">Learn More</button></a>
        <a href="assets/Resume.pdf" target="_blank"><button class="learn-more">View Resume</button></a>
      </div>
    </div>

    <!-- About -->
    <section id="about-section" class="about-section">
      <h1>About Me</h1>
      <div class="about-container">
        <div class="details">
          <!-- <h2>Details</h2> -->
          <ul>
            <li>BSc Computer Science (Senior Year)</li>
            <li>Research Interests: Theoretical CS, Robotics</li>
            <li>Linux Enthusiast (Ubuntu) <i class="devicon-ubuntu-plain colored"></i> </li>
         <li><a id="goodreads-link" href="#" target="_blank" class="text-decoration-none text-reset">
            View what I'm reading for <span id="current-year"></span> > 
          <img src="assets/goodreads-logo.svg" alt="Goodreads" class="goodreads-icon"></a></li>
          </ul>
        </div>
      </div>
    </section>

    <!-- Projects -->
    <section id="project-section" class="project-section">
      <h1>Projects</h1>
      <div class="container mt-4">

        <!-- Desktop Grid -->
        <div class="row g-4 d-none d-md-flex">
          {projects.map((project) => (
            <div class="col-12 col-md-4">
              <ProjectCard {...project} />
            </div>
          ))}
        </div>

        <!-- Mobile Carousel -->
        <div id="projectsCarousel" class="carousel slide d-md-none">
          <div class="carousel-inner">
            {projects.map((project, i) => (
              <div class={`carousel-item ${i === 0 ? "active" : ""}`}>
                <ProjectCard {...project} />
              </div>
            ))}
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#projectsCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#projectsCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>

      </div>
    </section>

    <!-- Certificates -->
    <section id="certificate-section" class="certificate-section">
      <h1>Certificates</h1>
      <div class="container mt-4">

        <!-- Desktop Grid -->
        <div class="row g-4 d-none d-md-flex">
          {certificates.map((cert) => (
            <div class="col-12 col-md-4">
              <CertificateCard {...cert} />
            </div>
          ))}
        </div>

        <!-- Mobile Carousel -->
        <div id="certificatesCarousel" class="carousel slide d-md-none">
          <div class="carousel-inner">
            {certificates.map((cert, i) => (
              <div class={`carousel-item ${i === 0 ? "active" : ""}`}>
                <CertificateCard {...cert} />
              </div>
            ))}
          </div>
          <button class="carousel-control-prev" type="button" data-bs-target="#certificatesCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon"></span>
          </button>
          <button class="carousel-control-next" type="button" data-bs-target="#certificatesCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon"></span>
          </button>
        </div>

      </div>
    </section>
  <script 
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js"
  async>
  </script>
  <script src="script.js" defer></script>

  </body>
</html>
